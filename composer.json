{
    "name": "pantheon-systems/example-drops-8-composer",
    "description": "Install drops-8 with Composer on Pantheon.",
    "type": "project",
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "package",
            "package": {
                "name": "ckeditor/a11ychecker",
                "version": "1.1.1",
                "type": "drupal-library",
                "dist": {
                    "url": "https://download.ckeditor.com/a11ychecker/releases/a11ychecker_1.1.1.zip",
                    "type": "zip"
                },
                "require": {
                    "ckeditor/balloonpanel": "^4.13.0"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "ckeditor/balloonpanel",
                "version": "4.13.0",
                "type": "drupal-library",
                "dist": {
                    "url": "https://download.ckeditor.com/balloonpanel/releases/balloonpanel_4.13.0.zip",
                    "type": "zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "ckeditor/templates",
                "version": "4.13.0",
                "type": "drupal-library",
                "dist": {
                    "url": "https://download.ckeditor.com/templates/releases/templates_4.13.0.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "require": {
        "php": ">=7.0.8",
        "ckeditor/a11ychecker": "^1.1",
        "ckeditor/balloonpanel": "^4.13.0",
        "ckeditor/templates": "^4.13",
        "composer/installers": "^1.0.20",
        "cweagans/composer-patches": "^1.0",
        "drupal-composer/drupal-scaffold": "^2.0.1",
        "drupal/address": "1.x-dev",
        "drupal/admin_toolbar": "^2.0",
        "drupal/adminimal_admin_toolbar": "^1.9",
        "drupal/adminimal_theme": "^1.5",
        "drupal/allowed_formats": "^1.1",
        "drupal/autocomplete_deluxe": "1.x-dev",
        "drupal/backup_migrate": "^4.0",
        "drupal/block_field": "^1.0@alpha",
        "drupal/ckeditor_a11ychecker": "^1.0",
        "drupal/ckeditor_balloonpanel": "^1.1",
        "drupal/ckeditor_codemirror": "^2.2",
        "drupal/ckeditor_templates": "^1.1",
        "drupal/ckeditor_templates_ui": "^1.2",
        "drupal/coffee": "^1.0@beta",
        "drupal/config_delete": "^1.7",
        "drupal/config_direct_save": "^1.0",
        "drupal/config_ignore": "^2.1",
        "drupal/config_installer": "^1.0",
        "drupal/console": "^1",
        "drupal/core": "^8.8",
        "drupal/core-recommended": "^8.8",
        "drupal/ctools": "^3.2",
        "drupal/devel": "^2.1",
        "drupal/diff": "^1.0",
        "drupal/dropdown_language": "^2.3",
        "drupal/embed": "^1.0",
        "drupal/entity_browser": "~2.0",
        "drupal/entity_embed": "^1.0",
        "drupal/entity_reference_revisions": "1.x-dev",
        "drupal/entity_usage": "^2.0@beta",
        "drupal/facets": "1.x-dev",
        "drupal/feeds": "^3.0@alpha",
        "drupal/field_group": "^3.0",
        "drupal/fontawesome": "^2.14",
        "drupal/fullcalendar_view": "^2.4",
        "drupal/geocoder": "3.x-dev",
        "drupal/geofield_map": "^2.51",
        "drupal/geolocation": "3.x-dev",
        "drupal/graphql": "^3.0",
        "drupal/graphql_search_api": "^1.0@RC",
        "drupal/image_widget_crop": "^2.2",
        "drupal/imagemagick": "^2.6",
        "drupal/inline_entity_form": "^1.0@RC",
        "drupal/insert_view": "1.x-dev",
        "drupal/menu_item_extras": "^2.7",
        "drupal/menu_token": "1.x-dev",
        "drupal/metatag": "^1.10",
        "drupal/office_hours": "^1.2",
        "drupal/openid_connect": "1.x-dev",
        "drupal/openid_connect_windows_aad": "^1.1",
        "drupal/paragraphs": "^1.9",
        "drupal/pathauto": "^1.4",
        "drupal/queue_ui": "^2.0",
        "drupal/rules": "^3.0@alpha",
        "drupal/scheduler": "^1.1",
        "drupal/search_api": "1.x-dev",
        "drupal/search_api_attachments": "^1.0@beta",
        "drupal/search_api_autocomplete": "^1.2",
        "drupal/search_api_solr": "^3.4",
        "drupal/sendgrid_integration": "1.x-dev",
        "drupal/simple_sitemap": "^3.4",
        "drupal/simple_timeline": "^1.1",
        "drupal/siteimprove": "^1.1",
        "drupal/smtp": "1.x-dev",
        "drupal/taxonomy_manager": "^1.0@alpha",
        "drupal/token_filter": "^1.1",
        "drupal/twig_vardumper": "^1.2",
        "drupal/uswds_base": "2.x-dev",
        "drupal/views_field_view": "^1.0@beta",
        "drupal/views_tree": "^2.0@alpha",
        "drupal/webform": "^5.4",
        "drupal/webform_embed": "1.x-dev",
        "drush-ops/behat-drush-endpoint": "^9.3",
        "drush/drush": "^9.0.0",
        "geocoder-php/bing-maps-provider": "^4.0",
        "geocoder-php/google-maps-provider": "^4.4",
        "oomphinc/composer-installers-extender": "^1.1",
        "pantheon-systems/quicksilver-pushback": "^2",
        "rvtraveller/qs-composer-installer": "^1.1",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "wikimedia/composer-merge-plugin": "^1.4",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "behat/behat": "3.*",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.2",
        "behat/mink-goutte-driver": "^1.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
        "dmore/behat-chrome-extension": "^1.3",
        "drupal/coder": "^8.3.1",
        "drupal/drupal-extension": "~3",
        "genesis/behat-fail-aid": "^2.1",
        "jcalderonzumba/gastonjs": "^1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
        "mikey179/vfsstream": "^1.2",
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^3.4.0",
        "symfony/css-selector": "^2.8"
    },
    "conflict": {
            "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "build-assets": [
            "@prepare-for-pantheon",
            "composer install --optimize-autoloader --no-dev"
        ],
        "lint": "find web/modules/custom web/themes/custom -name '*.php' -exec php -l {} \\;",
        "code-sniff": [
            "./vendor/bin/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor ./web/modules/custom",
            "./vendor/bin/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor,assets ./web/themes/custom"
        ],
        "unit-test": "echo 'No unit test step defined.'",
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
        "post-install-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "DrupalProject\\composer\\ScriptHandler::postInstall"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "DrupalProject\\composer\\ScriptHandler::postInstall"
        ],
        "post-create-project-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "DrupalProject\\composer\\ScriptHandler::postInstall"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library", "ckeditor/a11ychecker", "ckeditor/balloonpanel", "ckeditor/templates"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/private/scripts/quicksilver/{$name}/": ["type:quicksilver-script"]
        },
        "build-env": {
            "install-cms": [
                "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes"
            ],
            "export-configuration": "drush config-export --yes"
        },
        "drupal-scaffold": {
            "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8-scaffolding/{version}/{path}",
            "includes": [
                "sites/default/default.services.pantheon.preproduction.yml",
                "sites/default/settings.pantheon.php"
            ],
            "excludes": [
                ".csslintrc",
                ".editorconfig",
                ".eslintignore",
                ".eslintrc.json",
                "web.config"
            ]
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drupal/core": {
                "https://www.drupal.org/project/drupal/issues/3056458": "https://www.drupal.org/files/issues/2019-05-24/check-for-book-before-adding-elements-3056458-5.patch"
            },
            "drupal/menu_token": {
                "Fix multilingual issue - https://www.drupal.org/project/menu_token/issues/3011295": "https://www.drupal.org/files/issues/2019-02-22/menu_token-link_attributes_active-3011295-8.patch"
            }
        },
        "merge-plugin": {
            "include": [
                "web/modules/contrib/ckeditor_codemirror/composer.libraries.json"
            ]
        },
        "installer-types": [
            "library"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
